<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/detail_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/detail_text_name"
        app:layout_constraintTop_toBottomOf="@id/detail_img"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_text_detail"
        app:layout_constraintTop_toBottomOf="@id/detail_text_name"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_text_date"
        app:layout_constraintTop_toBottomOf="@id/detail_text_detail"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_text_contact"
        app:layout_constraintTop_toBottomOf="@id/detail_text_date"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_text_address"
        app:layout_constraintTop_toBottomOf="@id/detail_text_contact"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_pos"
        app:layout_constraintTop_toBottomOf="@id/detail_text_address"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/detail_btn"
        android:text="返回主页"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>